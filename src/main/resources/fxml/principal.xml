<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Slider?>


<?import javafx.scene.text.Text?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<VBox xmlns:fx="http://javafx.com/fxml" styleClass="conteneurPrincipal">
    <VBox styleClass="conteneurParametreSons" VBox.vgrow="ALWAYS">
            <HBox styleClass="texteTitres" >
				<Text styleClass="texteTitre" text="%titre"></Text>
			</HBox>
			<Text styleClass="texteSons" text="%musique"></Text>
			<Slider styleClass="slider"/>
			<Text styleClass="texteSons" text="%effet"></Text>
			<Slider styleClass="slider"/>
			
			

			
    </VBox>
	<HBox styleClass="conteneurBoutons" HBox.hgrow="ALWAYS" >
			<HBox styleClass="conteneurBoutonCancel" HBox.hgrow="ALWAYS">
                <Button text="%cancel"/>	
			</HBox>
			<HBox styleClass="conteneurBoutonSave" HBox.hgrow="ALWAYS" >
                <Button text="%save"/>
            </HBox>
	</HBox>
         
</VBox>
